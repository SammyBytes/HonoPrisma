{
  "name": "hono-prisma",
  "version": "0.0.2",
  "description": "Prisma ORM plugin for HonoJS framework",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc && bun build src/index.ts --outdir dist --target bun --external:hono --external:@prisma/client --minify",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "prepare": "bun run build",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "hono",
    "prisma",
    "middleware",
    "typescript",
    "bun"
  ],
  "author": "Samuel Luciano",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "hono": ">=4.0.0",
    "@prisma/client": ">=4.0.0"
  },
  "dependencies": {}
}
